@import "./client/css/mixins"
@import "icons/bootstrap-glyphicons.css"
*
  box-sizing border-box
  // user-select none
html, body
  width 100%
  height 100%
  margin 0
  font 13px 'lucida grande', tahoma, verdana, arial, sans-serif
  overflow-x hidden

#sidebar
  width 266px
  height 100%
  position fixed
  top 0
  left 0
  background rgba(0, 0, 0, 0.9)
  color #fff
  overflow auto
  box-shadow inset -2px 1px 10px -3px rgba(0, 0, 0, 0.6)
.navigation
  padding 0
  margin 0
  margin-top 20px
  border-top 1px solid rgba(255, 255, 255, 0.1)
  border-bottom 1px solid rgba(0, 0, 0, 0.8)
  cursor pointer
.navigation-btn
  padding 10px
  border-top 1px solid rgba(0, 0, 0, 0.8)
  border-bottom 1px solid rgba(255, 255, 255, 0.1)

.navigation-btn-selected
  box-shadow inset 0px 0px 8px rgba(0, 0, 0, 0.8)
  border 0
  color #555

#main, .view
  width 100%
  height 100%

#main
  padding 50px 0
  padding-bottom 0
  background #272822
  z-index 2
  position relative

#header, #footer
  width 100%
  height 50px
  background #171814
  position fixed
  top 0
  left 0

#header
  padding-left 60px
  padding-right 10px
  border-bottom 1px solid #0B0C0A
  box-shadow inset 0 2px 50px rgba(255, 255, 255, 0.06)
  color #ddd  

.sidebar-btn
  width 50px
  height 50px
  position absolute
  left 0
  top 0
  background rgba(255, 255, 255, 0.07)
  box-shadow 1px 1px 4px rgba(0, 0, 0, 0.3)
 
  text-align center
  line-height 50px
  font-size 16px
  cursor pointer
  z-index 5

#footer
  height 50px
  top auto
  bottom 0
  background rgba(0, 0, 0, 0.6)
  border-top 1px solid rgba(255, 255, 255, 0.15)
.view-header, .view-footer
  display none
  .playlist-name
    line-height 50px
  &.header-visible, &.footer-visible
    display block

#controls
  .controls
    width 100%
    height 100%
    float left
    border-right 1px solid rgba(255, 255, 255, 0.3)
  .control-btn
    width 33.3%
    height 100%
    line-height 55px
    text-align center
    color rgba(255, 255, 255, 0.9)
    font-size 20px
    display inline-block
    cursor pointer
    border-left 1px solid rgba(255, 255, 255, 0.15)
    border-right 1px solid rgba(0, 0, 0, 0.4)
    &:hover
      color #fff
      background rgba(255, 255, 255, 0.1)
.view
  color #444
  display none
  padding-bottom 0
  overflow auto
  padding-bottom 50px
  -webkit-overflow-scrolling touch  
  &.view-visible
    display block

.search-panel
  padding 7px 10px
  text-align right

.search-input-wrapper
  display inline-block
  position relative
  i
    position absolute
    top 9px
    left 10px
    color #ccc

.spotify-search
  .search-input-wrapper
    width 100%
    margin-top 10px

.spotify-search-header
  height 40px
  margin-top 7px
  margin-bottom -4px
.spotify-search-tab
  width 33.3%
  height 35px
  float left
  padding 0 3px
  line-height 35px
  text-align center

.spotify-search-tab-content
  width 100%
  height 35px
  background #fff
  border-radius 5px 5px 0px 0px
  cursor pointer
  i
    vertical-align middle
    margin-right 5px
.spotify-search-input
  width 100%
  height 30px
  padding-left 30px
  color #666
  border 0
  border-radius 3px
  border-top 1px solid rgba(0, 0, 0, 0.3)
  border-left 1px solid rgba(0, 0, 0, 0.3)
  box-shadow inset 2px 2px 2px rgba(0, 0, 0, 0.15)

.list
  border-top 1px solid rgba(255,255,255,0.1)

.search-input
  width 200px
  height 30px
  padding-left 30px
  border 0
  color #fff
  background #111
  border-radius 3px
  border-bottom 1px solid rgba(255, 255, 255, 0.15)
  border-right 1px solid rgba(255, 255, 255, 0.15)
.track-info-item
  text-align center
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

.track-info-title
  color #f0f0f0
  font-weight bold
  font-size 14px
  margin-top 8px
  margin-bottom 3px

.track-info-artist
  font-size 11px

.now-playing, .album-art
  width 100%
  height 100%

.album-art
  border-top 1px solid #3C3D39

.album-art-cover
  width 100%
  height 100%
  
  background-size auto 100%
  background-position top center
  background-repeat no-repeat


.playlist, .track
  padding 15px
  color #fff
  border-bottom 1px solid rgba(255, 255, 255, 0.1)
  border-top 1px solid rgba(0, 0, 0, 0.1)
  cursor pointer
  position relative
  i
    display none
  &:hover:not(.current-track)
    background rgba(0, 0, 0, 0.1)
.track-artist
  font-size 11px
  margin-bottom 4px
  
.track-title
  font-size 14px

.current-track
  background rgba(255, 255, 255, 0.2)
  border 0
  color #fff
  margin-top -2px
  margin-bottom 2px
  box-shadow 0 0 4px rgba(0, 0, 0, 0.3)
  border-top 1px solid rgba(255, 255, 255, 0.3)
  border-bottom 1px solid rgba(0, 0, 0, 0.6)
  padding-left 50px
  i
    display block
    position absolute
    left 20px
    top 50%
    margin-top -10px
    color #A0E22D
    font-size 16px

@keyframes loading
  0%
    transform translate3d(0, 0, 0) scale(1, 1)
  25%
    transform translate3d(-100px, 0, 0) scale(0.5, 0.5)
  50%
    transform translate3d(0, 0, 0) scale(1, 1)
  75%
    transform translate3d(100px, 0, 0) scale(0.5, 0.5)
  100%
    transform translate3d(0, 0, 0) scale(1, 1)



#loading
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.5)
  position fixed
  top 0
  left 0
  z-index 10
  display none
  .loader
    width 32px
    height 32px
    position absolute
    top 50%
    left 50%
    margin-top -16px
    margin-left -16px
    border-radius 16px
    background #fff
    animation loading 1.5s infinite ease-in-out
    box-shadow 2px 2px 2px rgba(0, 0, 0, 0.3)
  &.loader-visible
    display block
